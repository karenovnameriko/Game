<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Game.MainWindow"
        Title="Game" Width="520" Height="580">
    <Grid>
        <Canvas Name="GameCanvas" Width="500" Height="500" Background="LightGreen" />
        <TextBlock Name="WinText"
           Text="ВЫ ВЫИГРАЛИ!"
           FontSize="32"
           FontWeight="Bold"
           Foreground="Green"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           IsVisible="False"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="5">
            <Button Name="StartButton" Content="Начать игру" Width="120" Margin="5" Background="Blue"/>
            <TextBlock Name="ScoreText" Text="Score: 0" Margin="5"/>
            <TextBlock Name="TrapText" Text="Traps: 0/5" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
